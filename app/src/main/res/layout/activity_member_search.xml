<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/relative_layout"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MemberSearch">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:padding="48dp">

            <TextView
                android:id="@+id/contact_form_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="16dp"
                android:text="Member Search"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/name1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contact_form_title"

                android:text="Name "
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"></TextView>



            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/nm1"
                android:layout_below="@+id/name1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/id"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nm1"
                android:layout_marginTop="15dp"

                android:text="Membership ID"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"></TextView>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/nm2"
                android:layout_below="@+id/id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_member_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/organization"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nm2"
                android:layout_marginTop="15dp"

                android:text="Organization"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"></TextView>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/nm3"
                android:layout_below="@+id/organization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/Mt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nm3"
                android:layout_marginTop="15dp"

                android:text="Membership Type"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"></TextView>


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Mt"
                android:layout_centerHorizontal="true"
                android:id="@+id/radioGroup">

                <RadioButton
                    android:id="@+id/radio2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Student Member"
                    android:checked="false"
                    android:textSize="10dp" />

                <RadioButton
                    android:id="@+id/radio3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Associate Member"
                    android:checked="false"
                    android:textSize="10dp" />

                <RadioButton
                    android:id="@+id/radio4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Associate Member"
                    android:checked="false"
                    android:textSize="10dp" />

                <RadioButton
                    android:id="@+id/radio5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Honorary Member"
                    android:checked="false"
                    android:textSize="10dp" />


                <RadioButton
                    android:id="@+id/radio6"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Corporate Member"
                    android:checked="false"
                    android:textSize="10dp" />

                <RadioButton
                    android:id="@+id/radio7"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Sponsor Member"
                    android:checked="false"
                    android:textSize="10dp" />

                <RadioButton
                    android:id="@+id/radio8"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="International Member"
                    android:checked="false"
                    android:textSize="10dp" />

            </RadioGroup>



            <TextView
                android:id="@+id/designation"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radioGroup"
                android:layout_marginTop="15dp"

                android:text="Designation"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"></TextView>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/nm4"
                android:layout_below="@+id/designation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/Institute"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nm4"
                android:layout_marginTop="15dp"

                android:text="Institute"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"></TextView>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/nm5"
                android:layout_below="@+id/Institute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/education"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nm5"
                android:layout_marginTop="15dp"

                android:text="Education Level"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"></TextView>


            <Spinner
                android:layout_below="@+id/education"
                android:id="@+id/spinner2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"/>

            <TextView
                android:id="@+id/phone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner2"
                android:layout_marginTop="15dp"

                android:text="Phone Number"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"></TextView>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/nm6"
                android:layout_below="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/blood"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nm6"
                android:layout_marginTop="15dp"

                android:text="Blood group"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"></TextView>


            <Spinner
                android:layout_below="@+id/blood"
                android:id="@+id/spinner3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"/>

            <Button
                android:id="@+id/submit1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner3"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@color/black"
                android:elevation="4dp"
                android:paddingLeft="70dp"
                android:paddingRight="70dp"
                android:text="Search"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/idTVResponse"
                android:layout_below="@+id/submit1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center_horizontal"
                android:text="Response"
                android:textAlignment="center"
                android:textSize="15sp" />

            <!--progress bar for loading -->
            <ProgressBar
                android:id="@+id/idLoadingPB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />


        </RelativeLayout>


    </ScrollView>


</RelativeLayout>

